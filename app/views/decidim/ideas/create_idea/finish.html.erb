<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %>
    <%= t(".back") %>
  <% end %>
<% end %>

<div class="row column">
  <div class="medium-centered">
    <div class="callout secondary">
      <%= t ".callout_text" %>

    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="small-12 medium-centered">
    <div class="card">
      <div class="card__content">
        <%= render partial: "finish_help" %>

        <div class="actions">
          <%= link_to t(".send_my_idea"),
                      decidim_ideas.send_to_technical_validation_idea_path(current_idea),
                      class: "button success light expanded",
                      data: { confirm: t(".confirm") } %>
          <%= link_to t(".edit_my_idea"), edit_idea_path(current_idea), class: "button expanded light secondary" %>
          <%= link_to t(".go_to_my_ideas"), decidim_ideas.ideas_path(filter: { author: "myself", with_any_state: "", with_any_scope: "" }), class: "" %>
        </div>
      </div>
    </div>
  </div>
</div>
