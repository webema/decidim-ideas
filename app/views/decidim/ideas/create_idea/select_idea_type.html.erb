<% default_type = available_idea_types.first %>
<% content_for :back_link do %>
  <%= link_to ideas_path do %>
    <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %>
    <%= t(".back") %>
  <% end %>
<% end %>

<div class="row column">
  <div class="callout secondary">
    <%= t ".select_idea_type_help" %>
    <%= link_to t(".more_information"), decidim.page_path("ideas"), target: "_blank" %>.
  </div>
</div>
<br>
<div class="row column">
  <div class="main-container">
    <div class="row collapse main-container--side-panel">
      <div class="columns medium-4 large-3">
        <div class="side-panel">
          <ul class="tabs vertical side-panel__tabs" id="ideas-tabs" data-tabs>
            <% idea_types_each do |type| %>
              <li class="tabs-title <%= "is-active" if type == default_type %>">
                <%= link_to "#ideaType#{type.id}" do %>
                  <%= t(".choose_html", title: translated_attribute(type.title)) %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="columns medium-8 large-9">
        <div class="main-container__content">
          <div class="tabs-content vertical" data-tabs-content="ideas-tabs">
            <% idea_types_each do |type| %>
              <div class="tabs-panel <%= "is-active" if type == default_type %>" id="<%= "ideaType#{type.id}" %>">
                <h2 class="section-heading"><%= translated_attribute(type.title) %></h2>
                <div>
                  <%= raw translated_attribute type.description %>
                </div>
                <br>
                <%= decidim_form_for(@form, url: next_wizard_path, method: :put, html: { id: "new_idea_#{type.id}", class: "form select-idea_type-form" }) do |f| %>
                  <%= f.hidden_field :type_id, value: type.id, id: "idea_type_id_#{ type.id }" %>
                  <%= f.submit t(".select"), class: "button" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
