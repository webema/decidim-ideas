<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t ".title" %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column">
      <%= form.translated :editor, :description, toolbar: :full, lines: 25 %>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.upload :banner_image, optional: false %>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t ".options" %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.check_box :attachments_enabled %>
    </div>

    <div class="row column">
      <%= form.check_box :comments_enabled %>
    </div>
  </div>
</div>

<%= javascript_pack_tag "decidim_ideas_admin" %>
