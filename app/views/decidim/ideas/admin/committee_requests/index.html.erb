    </div>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
        <tr>
          <th><%= t "user", scope: "activemodel.attributes.ideas_committee_member" %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>



        </tbody>
      </table>
    </div>
  </div>
