    <h2 class="card-title"><%= t ".title" %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= t ".invite_to_committee_help" %>
    </div>

    <div class="row column">
      <div class="committee_link" id="committee_link">
        <%= decidim_ideas.new_idea_committee_request_url(current_idea) %>
