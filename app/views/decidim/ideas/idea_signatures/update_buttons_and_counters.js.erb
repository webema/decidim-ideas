(function () {
  'use strict';

  var $ideaVotesCount = $('#idea-<%= current_idea.id %>-progress-bar'),
      userIdentitiesDialog = $('#user-identities'),
      refreshUrl;

  $ideaVotesCount.html('<%= j(render partial: "decidim/ideas/ideas/progress_bar", locals: { idea: current_idea }) %>');

  // Update the identities dialog, if exists.
  if (userIdentitiesDialog.length) {
    refreshUrl = userIdentitiesDialog.data('refresh-url');

    $.ajax(refreshUrl).done(function(response){
      userIdentitiesDialog.html(response);
    });
  } else {
    var $ideaVoteButton = $('#idea-<%= current_idea.id %>-vote-cabin');
    $ideaVoteButton.html('<%= j(render partial: "decidim/ideas/ideas/vote_cabin", locals: { idea: current_idea }) %>');
  }
}());
